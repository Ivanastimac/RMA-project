<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profileLLN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/profilePictureNotifications"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:foreground="@drawable/rounded_frame"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/nameProfileNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/reviewTextNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLLN"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="The original review of the user"/>

        <TextView
            android:id="@+id/dateTVNotfications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileLLN"
            android:layout_toEndOf="@+id/reviewTextNotifications"
            android:text="dd/MM/yyyy"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/reviewTextNotifications" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>