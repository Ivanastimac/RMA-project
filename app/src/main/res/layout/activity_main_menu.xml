<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <ImageButton
        android:id="@+id/imageButtonNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_baseline_settings_24" />

    <ImageView
        android:id="@+id/imageButtonProfile"
        android:layout_width="78dp"
        android:layout_height="83dp"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:foreground="@drawable/rounded_frame"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="50dp">

        <Button
            android:id="@+id/buttonNewPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newPage" />
        <Button
            android:id="@+id/buttonNewPicturebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/newSlikovnica"
            android:layout_below="@+id/buttonNewPage"/>

        <Button
            android:id="@+id/buttonArchive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/archive"
            android:layout_below="@+id/buttonNewPicturebook"/>

        <Button
            android:id="@+id/buttonExplore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/explore"
            android:layout_below="@+id/buttonArchive"/>

        <Button
            android:id="@+id/buttonPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pending Picturebooks"
            android:layout_below="@+id/buttonExplore"
            android:visibility="invisible"/>

    </RelativeLayout>

</RelativeLayout>